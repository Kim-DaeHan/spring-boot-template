root = true

# 모든 파일
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java 파일 (Tab Style)
[*.java]
indent_style = tab
indent_size = 4
tab_width = 4
max_line_length = 100
ij_continuation_indent_size = 8

# YAML 파일
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML, HTML 파일
[*.{xml,html}]
indent_style = space
indent_size = 2

# JSON 파일
[*.json]
indent_style = space
indent_size = 2

# Gradle 파일
[*.gradle]
indent_style = space
indent_size = 2

# Properties 파일
[*.properties]
indent_style = space
indent_size = 2